/* 专家详情页样式 */
page {
  background-color: #f8f8f8;
}

.page-container {
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading {
  font-size: 30rpx;
  color: #999;
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.error-message {
  font-size: 30rpx;
  color: #ff4d4f;
  margin-bottom: 20rpx;
}

.retry-button {
  padding: 16rpx 30rpx;
  background-color: #3A8FB7;
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
}

/* 头部信息卡片 */
.doctor-header-card {
  background: #3A8FB7;
  color: #fff;
  padding: 40rpx 30rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.15);
  margin-bottom: 20rpx;
}

.doctor-base-info {
  display: flex;
  margin-bottom: 40rpx;
}

.doctor-avatar {
  width: 180rpx;
  height: 180rpx;
  margin-right: 40rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 6rpx solid rgba(255,255,255,0.8);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.doctor-avatar image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.doctor-info-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.doctor-name {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.doctor-title {
  font-size: 32rpx;
  opacity: 0.95;
  margin-bottom: 12rpx;
}

.doctor-positional-title {
  display: inline-block;
  font-size: 28rpx;
  padding: 6rpx 20rpx;
  background-color: rgba(255,255,255,0.2);
  color: #fff;
  border-radius: 24rpx;
  margin-top: 8rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  backdrop-filter: blur(4px);
}

.doctor-hospital {
  font-size: 30rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
}

.doctor-auth {
  display: inline-block;
  font-size: 26rpx;
  padding: 6rpx 20rpx;
  background-color: #f8d151;
  color: #333;
  border-radius: 24rpx;
  margin-top: 16rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.doctor-stats {
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid rgba(255,255,255,0.4);
  padding-top: 24rpx;
}

.stat-item {
  text-align: center;
  font-size: 28rpx;
  flex: 1;
}

.stat-item.center {
  border-left: 1rpx solid rgba(255,255,255,0.3);
  border-right: 1rpx solid rgba(255,255,255,0.3);
}

.highlight {
  color: #09c86f;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.1);
}

/* 内容导航 */
.tab-container {
  display: flex;
  background-color: #fff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
}

.tab {
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #999;
  position: relative;
  margin-right: 30rpx;
}

.tab.active {
  color: #333;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #3A8FB7;
  border-radius: 2rpx;
}

/* 详细内容区域 */
.doctor-content {
  background-color: #fff;
  padding: 30rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 6rpx;
  height: 30rpx;
  background-color: #3A8FB7;
  border-radius: 3rpx;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 擅长领域标签 */
.specialties-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.specialty-tag {
  background-color: #f2f7fa;
  color: #3A8FB7;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

/* 段落文本 */
.paragraph {
  display: block;
  text-align: justify;
  margin-bottom: 20rpx;
}

/* 列表项 */
.position-item, .award-item, .research-item {
  margin-bottom: 16rpx;
  padding-left: 20rpx;
  position: relative;
}

.position-item::before, .award-item::before, .research-item::before {
  content: '•';
  position: absolute;
  left: 0;
  top: 0;
  color: #3A8FB7;
}

/* 富文本样式 */
rich-text {
  width: 100%;
  line-height: 1.8;
}

/* 视频选择栏 */
.video-tabs {
  display: flex;
  overflow-x: auto;
  margin-bottom: 24rpx;
  padding: 12rpx 0;
  position: relative;
}

.video-tabs::-webkit-scrollbar {
  display: none;
}

.video-tab {
  flex-shrink: 0;
  padding: 14rpx 36rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 36rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  transition: all 0.3s;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
}

.video-tab.active {
  background: linear-gradient(to right, #3A8FB7, #5aaac8);
  color: #fff;
  font-weight: 500;
  box-shadow: 0 4rpx 8rpx rgba(58,143,183,0.3);
}

/* 视频播放器 */
.video-player {
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  background-color: #000;
  position: relative;
  margin-bottom: 20rpx;
  padding-bottom: 56.25%;
  height: 0;
}

.video-player video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
}

/* 图片样式优化 */
.section-content image {
  max-width: 100%;
  margin: 16rpx 0;
  border-radius: 8rpx;
}

/* 科研成果区域 */
.research-content {
  text-align: left;
  line-height: 1.8;
}

.research-content rich-text {
  width: 100%;
} 