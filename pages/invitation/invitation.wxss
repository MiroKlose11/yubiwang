/* 页面基础样式 */
page {
  background-color: #000;
  height: 100%;
  overflow: hidden;
}

.container {
    background-color: #000;
    height: 100vh;
  width: 100vw;
  position: relative;
  overflow: hidden;
  }
  
/* 图片容器 */
  .image-container {
  width: 100vw;
    height: 100vh;
  background-color: #000;
  position: absolute;
  top: 0;
  left: 0;
  }
  
.swiper-item {
  height: 100vh !important;
  width: 100vw !important;
  position: relative;
  overflow: hidden;
  background-color: #000;
  }
  
.slide-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100vw;
  overflow: hidden;
  background-color: #000;
  opacity: 1;
  transition: opacity 0.5s ease;
  }
  
.slide-wrapper.active {
  opacity: 1;
}

/* 图片包装器 */
.image-wrapper {
    position: relative;
  width: 100%;
  height: 100%;
    overflow: hidden;
  background-color: #000;
}

.image-wrapper.current {
  z-index: 2;
  }
  
  .fullscreen-image {
  width: 100vw;
  height: 100vh;
  object-fit: cover;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  background-color: #000;
}

/* 高级渐变遮罩 */
.image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  background: linear-gradient(
    45deg,
    rgba(0, 0, 0, 0.05) 0%,
    transparent 30%,
    transparent 70%,
    rgba(255, 255, 255, 0.02) 100%
  );
  opacity: 0;
  transition: opacity 0.8s ease;
  pointer-events: none;
}

.image-wrapper.current .image-overlay {
  opacity: 1;
  }
  
/* 音符图标 - 简化版 */
.music-icon {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.5);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 50;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  animation: musicRotate 4s linear infinite;
}

.music-icon:active {
  transform: scale(0.95);
}

.music-icon.playing {
  animation: musicRotate 3s linear infinite;
}

.music-icon.paused {
  animation-play-state: paused;
}

@keyframes musicRotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 简化的音符设计 */
.music-note {
  position: relative;
  width: 24rpx;
  height: 32rpx;
}

.note-head {
  position: absolute;
  bottom: 0;
  left: 4rpx;
  width: 12rpx;
  height: 8rpx;
  background-color: #fff;
  border-radius: 50%;
  transform: rotate(-15deg);
}

.note-stem {
  position: absolute;
  bottom: 6rpx;
  right: 4rpx;
  width: 2rpx;
  height: 20rpx;
  background-color: #fff;
  border-radius: 1rpx;
}

.note-flag {
  position: absolute;
  top: 0;
  right: 2rpx;
  width: 8rpx;
  height: 12rpx;
  background-color: #fff;
  border-radius: 0 4rpx 4rpx 0;
  clip-path: polygon(0 0, 100% 0, 80% 100%, 0 60%);
}

/* 音乐波纹效果 */
.music-waves {
  position: absolute;
  right: -12rpx;
  top: 50%;
  transform: translateY(-50%);
}

.wave {
  position: absolute;
  width: 3rpx;
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 1.5rpx;
  animation: waveAnimation 1.5s ease-in-out infinite;
}

.wave-1 {
  right: 0;
  height: 8rpx;
  animation-delay: 0s;
}

.wave-2 {
  right: 6rpx;
  height: 12rpx;
  animation-delay: 0.2s;
}

.wave-3 {
  right: 12rpx;
  height: 6rpx;
  animation-delay: 0.4s;
}

.music-icon.paused .wave {
  animation-play-state: paused;
  opacity: 0.3;
}

@keyframes waveAnimation {
  0%, 100% {
    transform: scaleY(0.3);
    opacity: 0.6;
  }
  50% {
    transform: scaleY(1);
    opacity: 1;
  }
}

/* 底部动态箭头 - 空心向上箭头 */
.bottom-arrow {
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 50;
}

.arrow-up {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  animation: arrowUpMove 2s ease-in-out infinite;
  filter: drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.4));
}

.arrow-up::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 30rpx;
  height: 30rpx;
  border-top: 6rpx solid rgba(255, 255, 255, 0.9);
  border-right: 6rpx solid rgba(255, 255, 255, 0.9);
  transform: translate(-50%, -50%) rotate(-45deg);
  border-radius: 3rpx;
}

.arrow-up-delay {
  display: none;
}

@keyframes arrowUpMove {
  0%, 100% {
    transform: translateY(0);
    opacity: 0.6;
  }
  50% {
    transform: translateY(-25rpx);
    opacity: 1;
  }
}

/* 加载指示器 */
.loading-indicator {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 10;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
  }
  
/* 滑动提示 */
  .scroll-indicator {
    position: fixed;
  bottom: 200rpx;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 100;
  animation: fadeInOut 3s ease-in-out infinite;
  }
  
.scroll-indicator text {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  font-weight: 300;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10rpx);
  background-color: rgba(0, 0, 0, 0.3);
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

@keyframes fadeInOut {
  0%, 100% { opacity: 0; }
  50% { opacity: 1; }
}

/* 页面计数器 */
.page-counter {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  border-radius: 40rpx;
  padding: 12rpx 20rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  z-index: 100;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  }
  
.page-counter .divider {
  margin: 0 6rpx;
  opacity: 0.6;
    }

/* 响应式适配 */
@media (max-height: 667px) {
  .scroll-indicator {
    bottom: 160rpx;
    }
  
  .page-counter {
    bottom: 15rpx;
    right: 15rpx;
  }
  
  .music-icon {
    top: 30rpx;
    right: 30rpx;
    width: 50rpx;
    height: 50rpx;
  }
  
  .bottom-arrow {
    bottom: 60rpx;
  }
}