<!--简洁的图片展示页面-->
<view class="image-gallery">
  <!-- 加载状态 -->
  <view class="loading" wx:if="{{loading}}">加载中...</view>
  
  <!-- 错误状态 -->
  <view class="error-container" wx:elif="{{error}}">
    <view class="error-message">{{errorMsg || '内容加载失败'}}</view>
    <button class="back-btn" bindtap="goBack">返回</button>
  </view>
  
  <!-- 图片内容 -->
  <view class="images-container" wx:elif="{{page}}">
    <rich-text class="image-content" nodes="{{page.content}}"></rich-text>
  </view>
</view>