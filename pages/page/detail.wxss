/* 简洁的图片展示页面样式 */
page {
  margin: 0;
  padding: 0;
  background-color: #000;
  overflow-x: hidden;
}

.image-gallery {
  width: 100%;
  height: 100vh;
  margin: 0;
  padding: 0;
  background-color: #000;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: #fff;
  background-color: #000;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #000;
  padding: 40rpx;
}

.error-message {
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 40rpx;
  text-align: center;
}

.back-btn {
  background-color: #2b5876;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  border: none;
}

/* 图片容器 */
.images-container {
  width: 100%;
  margin: 0;
  padding: 0;
  background-color: #000;
}

.image-content {
  width: 100%;
  margin: 0;
  padding: 0;
  line-height: 0;
}

/* 图片样式 - 完全填满屏幕，无边距 */
.image-content image,
.image-content img {
  width: 100vw !important;
  max-width: 100vw !important;
  height: auto !important;
  display: block !important;
  margin: 0 !important;
  padding: 0 !important;
  border: none !important;
  border-radius: 0 !important;
  box-shadow: none !important;
  object-fit: cover;
  /* 由于使用了 display: block，移除了不必要的垂直对齐属性 */
}

/* 文本内容样式 */
.image-content p,
.image-content div,
.image-content span,
.image-content text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #fff;
  padding: 0 30rpx;
  margin: 20rpx 0;
}




/* 响应式适配 */
@media screen and (max-width: 375px) {
  .image-content image,
  .image-content img {
    width: 100vw !important;
  }
}

@media screen and (min-width: 768px) {
  .image-content image,
  .image-content img {
    width: 100vw !important;
  }
}