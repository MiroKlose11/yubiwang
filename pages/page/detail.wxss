/* 页面详情样式 */
.container {
  padding: 0 30rpx;
  padding-bottom: 40rpx;
}

.loading {
  text-align: center;
  padding: 60rpx 0;
  font-size: 28rpx;
  color: #666;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.error-message {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.back-btn {
  background-color: #2b5876;
  color: #fff;
  font-size: 28rpx;
  padding: 15rpx 40rpx;
  border-radius: 40rpx;
}

.page-container {
  padding-top: 20rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1.4;
  color: #333;
  margin-bottom: 30rpx;
}

.page-meta {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  font-size: 24rpx;
  color: #999;
}

.page-time {
  margin-right: 30rpx;
}

.page-content {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
}

/* 富文本内容样式 */
.rich-content {
  width: 100%;
  line-height: 1.8;
}

/* 确保图片自适应宽度 */
.rich-content image,
.rich-content img {
  max-width: 100% !important;
  height: auto !important;
  display: block;
  margin: 20rpx auto;
  border-radius: 8rpx;
}

/* 段落样式 */
.rich-content p,
.rich-content view {
  margin-bottom: 20rpx;
  line-height: 1.8;
} 