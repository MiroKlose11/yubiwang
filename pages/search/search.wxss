/* search.wxss */
page {
  height: 100vh;
  background-color: #f8f8f8;
}

.search-page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 搜索头部 */
.search-header {
  background-color: #ffffff;
  padding: 20rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  height: 70rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
}

.search-box icon {
  margin-right: 10rpx;
}

.search-box input {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
}

.search-btn {
  font-size: 28rpx;
  color: #3A4891;
  margin-left: 10rpx;
}

/* 搜索结果区域 */
.search-result {
  flex: 1;
  margin-top: 110rpx; /* 搜索框高度 + padding */
  padding: 20rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading {
  color: #999;
  font-size: 28rpx;
}

/* 空结果 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 150rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 搜索结果列表 */
.result-list {
  padding-bottom: 30rpx;
}

/* 文章项 */
.article-item {
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.article-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.article-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.article-info {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

.article-title {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1.4;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
}

.article-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
}

.article-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.article-time {
  margin-right: 20rpx;
}

.view-stats {
  display: flex;
  align-items: center;
  margin-left: auto;
}

.view-label, .view-count {
  color: #999;
  font-size: 24rpx;
}

/* 加载状态 */
.loading-status {
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #999;
}

.no-more {
  color: #999;
  font-size: 28rpx;
} 