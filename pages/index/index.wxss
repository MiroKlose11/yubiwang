/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f9f9f9;
}

.page-container {
  padding: 0;
  display: flex;
  flex-direction: column;
  width: 100%;
}

/* 搜索栏样式 */
.search-container {
  padding: 20rpx 30rpx;
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
}

.search-box {
  display: flex;
  align-items: center;
  height: 70rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
}

.search-box icon {
  margin-right: 10rpx;
}

.search-box input {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
}

.search-btn {
  font-size: 28rpx;
  color: #3A8FB7;
  margin-left: 10rpx;
}

/* 轮播图样式 */
.swiper-container {
  width: 100%;
  padding: 0;
  margin-top: 0;
  background-color: #fff;
}

.swiper {
  width: 100%;
  height: 350rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 分类导航样式 */
.category-nav {
  width: 100%;
  padding: 0;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}

.category-scroll {
  white-space: nowrap;
  height: 80rpx;
  width: 100%;
  padding: 0 15rpx;
}

.category-item {
  display: inline-block;
  padding: 0 25rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.category-item.active {
  color: #2b5876;
  font-weight: bold;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #2b5876;
  border-radius: 3rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* 文章列表样式 */
.article-list {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.article-item {
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.article-info {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

.article-title {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1.4;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 文本截断 - 开始 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  /* 文本截断 - 结束 */
}

.article-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 文本截断 - 开始 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  /* 文本截断 - 结束 */
}

.article-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.article-time {
  margin-right: 20rpx;
}

.view-stats {
  display: flex;
  align-items: center;
  margin-left: auto;
}

.view-label {
  color: #999;
  font-size: 24rpx;
}

.view-count {
  color: #999;
  font-size: 24rpx;
}

.article-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.article-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 无筛选结果提示 */
.no-filter-result {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #666;
}

.clear-filter {
  margin-top: 20rpx;
  display: inline-block;
  padding: 10rpx 30rpx;
  background: #3A8FB7;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
}

/* 返回顶部按钮样式 */
.back-to-top {
  position: fixed;
  bottom: 100rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(to right, #2b5876, #4e4376);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.back-to-top image {
  width: 50rpx;
  height: 50rpx;
}

/* 医生列表样式 */
.doctor-list {
  width: 100%;
  padding: 0;
  background-color: #f9f9f9;
}

.filter-section {
  background-color: #fff;
  padding: 0;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.filter-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333;
  padding: 0 10rpx;
  position: relative;
}

.filter-item.active {
  color: #3A8FB7;
  font-weight: bold;
}

.filter-item.active::after {
  content: '';
  position: absolute;
  bottom: -1rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #3A8FB7;
  border-radius: 2rpx;
}

.filter-icon {
  margin-left: 6rpx;
  color: #999;
  font-size: 24rpx;
}

.filter-item.active .filter-icon {
  color: #3A8FB7;
}

/* 下拉面板样式 */
.filter-dropdown {
  background: #fff;
  max-height: 400rpx;
  overflow-y: auto;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
  z-index: 10;
  border-bottom: 1rpx solid #eee;
}

.filter-options {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-option {
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 25rpx;
  min-width: 100rpx;
  text-align: center;
  margin-bottom: 10rpx;
}

.filter-option.active {
  background: #3A8FB7;
  color: #fff;
}

/* 字母网格特殊样式 */
.letter-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 10rpx;
  padding: 20rpx;
}

.letter-grid .filter-option {
  min-width: auto;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  margin: 0 auto;
}

.doctor-grid {
  padding: 20rpx;
}

.doctor-item {
  display: flex;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.doctor-avatar {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.doctor-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.doctor-auth {
  position: absolute;
  bottom: 0;
  right: 0;
  background: #4CAF50;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.doctor-info {
  flex: 1;
}

.doctor-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.doctor-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.doctor-hospital {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.doctor-location {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: flex;
  gap: 20rpx;
}

.doctor-experience, .doctor-surgery {
  color: #4CAF50;
}

.doctor-specialties {
  font-size: 24rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  overflow: hidden;
}

/* 加载状态 */
.loading-status {
  text-align: center;
  padding: 10rpx 0 30rpx;
  font-size: 28rpx;
  color: #999;
}

.no-data {
  text-align: center;
  padding: 100rpx 0;
  color: #666;
  font-size: 30rpx;
  line-height: 1.5;
}

.no-data text {
  display: block;
  background-color: #f8f8f8;
  margin: 0 auto;
  padding: 30rpx;
  border-radius: 10rpx;
  max-width: 80%;
}

.doctor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.view-detail {
  font-size: 24rpx;
  color: #ffffff;
  background: linear-gradient(to right, #2b5876, #4e4376);
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
}

/* 授权专家页面的执业地点筛选样式 */
.location-filter {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-radius: 0 0 12rpx 12rpx;
  overflow: hidden;
}

.location-title {
  background: linear-gradient(to right, #2b5876, #4e4376);
  color: white;
  font-size: 32rpx;
  padding: 24rpx 30rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}

.location-tabs {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  background-color: #f8f9fc;
  border-top: 1rpx solid rgba(0, 0, 0, 0.03);
}

.location-tab {
  margin: 8rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  background-color: white;
  color: #333;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #edf0f7;
}

.location-tab.active {
  background: linear-gradient(to right, #2b5876, #4e4376);
  color: white;
  border: none;
}

/* 修改授权专家头衔样式 */
.doctor-list:first-of-type .doctor-auth {
  position: absolute;
  bottom: 0;
  right: 0;
  background: linear-gradient(to right, #2b5876, #4e4376);
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 10rpx;
  border-radius: 12rpx 0 12rpx 0;
  font-weight: 500;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.auth-expert-badge {
  position: absolute !important;
  bottom: 0 !important;
  right: 0 !important;
  background: linear-gradient(to right, #2b5876, #4e4376) !important;
  color: #fff !important;
  font-size: 20rpx !important;
  padding: 6rpx 10rpx !important;
  border-radius: 12rpx 0 12rpx 0 !important;
  font-weight: 500 !important;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1) !important;
}
