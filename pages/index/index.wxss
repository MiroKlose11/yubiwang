/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f9f9f9;
}

.page-container {
  padding: 0;
  display: flex;
  flex-direction: column;
  width: 100%;
}

/* 搜索栏样式 */
.search-container {
  padding: 20rpx 30rpx;
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
}

.search-box {
  display: flex;
  align-items: center;
  height: 70rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
}

.search-box icon {
  margin-right: 10rpx;
}

.search-box input {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
}

.search-btn {
  font-size: 28rpx;
  color: #3A8FB7;
  margin-left: 10rpx;
}

/* 轮播图样式 */
.swiper-container {
  width: 100%;
  padding: 0;
  margin-top: 0;
  background-color: #fff;
}

.swiper {
  width: 100%;
  height: 350rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 分类导航样式 */
.category-nav {
  width: 100%;
  padding: 0;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}

.category-scroll {
  white-space: nowrap;
  height: 80rpx;
  width: 100%;
  padding: 0 15rpx;
}

.category-item {
  display: inline-block;
  padding: 0 25rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.category-item.active {
  color: #3A8FB7;
  font-weight: bold;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #3A8FB7;
  border-radius: 3rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* 文章列表样式 */
.article-list {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.article-item {
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.article-info {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

.article-title {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1.4;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 文本截断 - 开始 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  /* 文本截断 - 结束 */
}

.article-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 文本截断 - 开始 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  /* 文本截断 - 结束 */
}

.article-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.article-time {
  margin-right: 20rpx;
}

.view-stats {
  display: flex;
  align-items: center;
  margin-left: auto;
}

.view-label {
  color: #999;
  font-size: 24rpx;
}

.view-count {
  color: #999;
  font-size: 24rpx;
}

.article-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.article-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 加载状态 */
.loading-status {
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #999;
}

.no-data {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 30rpx;
}

/* 返回顶部按钮样式 */
.back-to-top {
  position: fixed;
  bottom: 100rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #3A8FB7;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.back-to-top image {
  width: 50rpx;
  height: 50rpx;
}
